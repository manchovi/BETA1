            android:id="@+id/hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora : "
            android:textSize="14dp"
            android:textColor="#585858"
            android:layout_marginTop="8dp"
                android:textStyle="bold"
            android:layout_marginLeft="10dp"
