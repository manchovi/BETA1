<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".controlporvoz">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chovi3"
        android:elevation="4dp"
        android:theme="@style/Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/tv_destino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:text="Create by. Manuel de Jesús Gámez López\nCopyright (c) 2018-2019 . All rights reserved."
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:elevation="4dp"
        android:background="@color/chovi3"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:text="Address MAC:00:00:00:00:00:00"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="bold"
        android:elevation="4dp"
        android:background="@color/gray"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtGrabarVoz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Has dicho..."
                android:textSize="14dp"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:visibility="gone"
                />


            <!--
            <TextView
                android:id="@+id/txtGrabarVoz1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Has dicho..."
                android:textSize="14dp"
                android:layout_marginTop="60dp"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                />
                -->


            <!--INICIO-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/chovi3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtGrabarVoz1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Has dicho..."
                        android:textSize="14dp"
                        android:fontFamily="serif-monospace"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_marginRight="0dp"
                    android:background="#3F51B5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Channel TxD"
                        android:fontFamily="serif-monospace"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                </LinearLayout>
            </LinearLayout>
            <!--FIN-->


            <!--INICIO DOS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#3F51B5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Channel RxD"
                        android:fontFamily="serif-monospace"
                        android:textAlignment="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_marginRight="0dp"
                    android:background="@color/chovi3">

                    <TextView
                        android:id="@+id/txtReceiver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Receiver:"
                        android:textSize="14dp"
                        android:textColor="#fff"
                        android:layout_marginTop="0dp"
                        android:fontFamily="serif-monospace"
                        android:textAlignment="center"
                        />

                </LinearLayout>
            </LinearLayout>
            <!--FIN-->



            <TextView
                android:id="@+id/txtexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="CONTROL POR COMANDOS DE VOZ.\nPara el control por voz es necesario:\n1. Estar conectado a internet para poder utilizar la API de voz de Google. Es posible descargar el paquete necesario de idioma para utilizar sin conexión.\n2. Saber el comando de voz asociado a cada tarea. Para ello se recomienda dar clic en el micrófono de abajo y decir el comando de voz ayuda.\n3. Dar clic sobre el micrófono y decir el comando de voz correspondiente a la tarea que se ejecutará\n4. Para el uso de comandos de control por bluetooth es necesario que su dispositivo móvil este emparejado con el módulo bluetooth receptor. Para ello cuenta con el menú de la parte superior de esta pantalla."
                android:textColor="#47484d"
                android:textSize="12dp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/img_btn_hablar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/microphone2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />



        </LinearLayout>

    </ScrollView>



</RelativeLayout>