    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/chovi3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp">


                <!--<TextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:text="Complete los datos de su cuenta"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@color/chovi3"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".10"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Complete los datos de su cuenta"
                            android:fontFamily="serif-monospace"
                            android:textAlignment="center"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".90"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_marginRight="0dp">

                        <!--<ImageView
                            android:id="@+id/BtnCerrar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_close4"
                            android:layout_marginRight="7dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/circulo2" />-->

                        <ImageView
                            android:id="@+id/closePopupPositiveImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_close4"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="7dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/circulo2"/>

                    </LinearLayout>

                </LinearLayout>






                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/black">


                    <!-- android:drawableStart="@drawable/ic_person"-->
                    <EditText
                        android:id="@+id/et_Nombres"
                        android:textColor="@color/blue"
                        android:layout_gravity="center"
                        android:hint="Ingrese sus nombres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14dp"

                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_Apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/black"
                    >

                    <!-- android:drawableStart="@drawable/ic_person"-->
                    <EditText
                        android:id="@+id/et_Apellidos"
                        android:textColor="@color/blue"
                        android:layout_gravity="center"
                        android:hint="Ingrese sus apellidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14dp"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/black">

                    <EditText
                        android:id="@+id/etUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="LOGIN: Ingrese su e-mail"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/blue"
                        android:textSize="14dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiPassword1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:passwordToggleEnabled="true"

                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"

                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/black"
                    >
                    <!--
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:errorEnabled="true"
                    -->
                    <EditText
                        android:id="@+id/etPassword1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:ems="10"
                        android:hint="Password"
                        android:textColor="@color/blue"
                        android:inputType="textPassword"
                        android:textSize="14dp"
                        android:maxLength="10"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiPassword2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:passwordToggleEnabled="true"

                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/Counter"

                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/black" >
                    <!--
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:errorEnabled="true"
                    -->
                    <EditText
                        android:id="@+id/etPassword2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"

                        android:hint="Confirme su Password"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:textColor="@color/blue"
                        android:textSize="14dp" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pregunta de seguridad"
                        android:textStyle="bold"
                        android:textColor="#181717"
                        android:textSize="14dp"/>

                    <Spinner
                        android:id="@+id/combo"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="1dp"
                        android:drawSelectorOnTop="true"
                        android:spinnerMode="dialog"
                        android:textSize="10dp" />

                </LinearLayout>

                <!--<android.support.design.widget.TextInputLayout
                    android:id="@+id/ti_respuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp">
                    <EditText
                        android:id="@+id/et_respuesta"
                        android:layout_gravity="center"
                        android:hint="Escriba la respuesta de la pregunta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="14dp"
                        android:textColor="#ffffff"
                        />
                </android.support.design.widget.TextInputLayout>-->

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiRespuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/black">
                    <EditText
                        android:id="@+id/etRespuesta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:textColor="@color/blue"
                        android:hint="Ingrese la respuesta a la pregunta"
                        android:inputType="text"
                        android:textSize="14dp"/>
                </android.support.design.widget.TextInputLayout>

                <!--android:background="@drawable/button_green_round"-->
                <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Crear registro"
                    android:textColor="@color/black"
                    android:background="@drawable/btn_mov1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="14dp"/>

                <!--<TextView
                    android:id="@+id/tv_res"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/estilo_mensaje"
                    android:text="mensaje"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>-->
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>