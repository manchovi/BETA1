<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="320dp"
    android:orientation="vertical"
    android:background="@drawable/fondo38"

    android:layout_gravity="center">

    <!--android:background="#bcb9b9"-->

    <!--android:background="@drawable/buttonstyle"
        android:background="@color/colorPrimaryDark1"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#413D3D"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos sensores"
                android:textAlignment="center"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".90"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginRight="0dp">

            <TextView
                android:id="@+id/txtclose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#CE0F0F"
                android:text="X"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="23dp"
                android:background="@drawable/circulo"/>

            <!--<ImageView
                android:id="@+id/BtnCerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close2"
                android:layout_marginRight="7dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circulo3" />-->

        </LinearLayout>

    </LinearLayout>

    <!--<TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:text="X"
        android:layout_marginRight="3dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cerclebackground"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/thermo1"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMPERATURA Y HUMEDAD RELATIVA"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#403d3d"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message From : "
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#585858"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#403d3d"
            android:layout_marginTop="1dp"

            />

       <!-- <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message : "
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#585858"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />-->


    </LinearLayout>



    <TextView
        android:id="@+id/tvTemperatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temperatura: "
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textColor="#212121"/>

        <TextView
            android:id="@+id/tvHumedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humedad Relativa: "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:textColor="#212121"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#403d3d"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha: "
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="#212121"/>
            <TextView
                android:id="@+id/tvHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora: "
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="#212121"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#403d3d"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

