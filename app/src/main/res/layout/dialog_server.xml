<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="2dp"
    android:background="#1A1818">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/chovi3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".11"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/msj1"
                android:fontFamily="serif-monospace"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".90"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="vertical"
            android:layout_marginRight="0dp">

            <TextView
                android:id="@+id/txtclose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textColor="#FFFFFF"
                android:text="X"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingRight="0dp"
                android:background="@drawable/circulo"/>

        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione Protocolo de ConexiÃ³n"
                android:layout_marginTop="10dp"
                android:textColor="#03168B"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/sprotocolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:tooltipText="hola"
                android:paddingRight="20dp"
                android:paddingLeft="20dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_dominio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">

                <EditText
                    android:id="@+id/et_dominio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:hint="@string/dominio"
                    android:textSize="14dp"
                    android:textColor="#03168B"
                    android:inputType="text"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_directorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp" >
                <EditText
                    android:id="@+id/et_directorio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="@string/directorio"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:textColor="#03168B"
                    />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ti_portal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp" >
                <EditText
                    android:id="@+id/et_portal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:hint="@string/portal"
                    android:inputType="text"
                    android:textSize="14dp"
                    android:textColor="#03168B"/>
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:gravity="right"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonstyle1"
                    android:text="Cerrar"
                    android:textColor="#181717" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="***" />

                <!--android:background="@android:color/transparent"-->
                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:elevation="0dp"
                    android:textColor="#181717"
                    android:background="@drawable/buttonstyle1"
                    android:alpha="1"
                    android:text="Guardar" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_encabezado"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Server API o Web Service: "
                android:visibility="visible"
                android:textAlignment="center"
                android:background="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/tv_encabezado1"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Server Portal Web: "
                android:visibility="visible"
                android:textAlignment="center"
                android:background="#FFFFFF"
                android:textSize="12dp"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                />


            <TextView
                android:id="@+id/tv_servidor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#3F3F3E"
                android:text="Server IP o Dominio: "
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_directorio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="#3F3F3E"
                android:text="Directorio API o Web Service: "
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_directorioPortal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="#3F3F3E"
                android:text="Directorio Portal Web: "
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="#3F3F3E"
                android:text="Fecha de Registro: "
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_hora"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="#3F3F3E"
                android:text="Hora de Registro: "
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_nada"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:text=""
                android:visibility="visible"
                android:background="@color/chovi3"
                />

        </LinearLayout>


    </ScrollView>

</LinearLayout>